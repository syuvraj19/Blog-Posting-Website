<div class="row">
    <div class="col-md-12">
        <h2>Posts</h2>
        <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#if posts}}
                        {{#each posts}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{title}}</td>
                                <td>{{#formatDate updatedAt}}{{/formatDate}}</td>
                                <td><a href="/posts?category={{category}}">{{category}}</a></td>
                                <td>{{published}}</td>
                                <td><a href="/posts/delete/{{id}}" class="btn btn-danger">remove</a></td>
                            </tr>
                        {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>
</div>